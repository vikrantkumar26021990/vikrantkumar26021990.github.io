script.page-tool-template(type="text/x-handlebars-template").
  <a class="page-container {{className}}" href="{{linkName}}" data-page-name="{{name}}" data-page-idx="{{idx}}">
    <div class="page-preview xsmall-font">
      <div class="label">{{displayName}}</div>
    </div>
  </a>
.label Pages
.page-tool-container
.ui-container
  .icon.add-page.fa-fw.fa-inverse.fa-plus-square(title="Add a page")
  .icon.remove-page.fa-fw.fa-inverse.fa-minus-square(title="Delete page")
  .icon.move-page-up.fa-fw.fa-inverse.fa-caret-square-o-up(title="Move page up")
  .icon.move-page-down.fa-fw.fa-inverse.fa-caret-square-o-down(title="Move page down")
